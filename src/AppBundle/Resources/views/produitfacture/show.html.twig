{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produitfacture</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produitFacture.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ produitFacture.libelle }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ produitFacture.code }}</td>
            </tr>
            <tr>
                <th>Prix_ht</th>
                <td>{{ produitFacture.prixht }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produitFacture.quantite }}</td>
            </tr>
            <tr>
                <th>Remise_ht</th>
                <td>{{ produitFacture.remiseht }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produitfacture_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('produitfacture_edit', { 'id': produitFacture.id }) }}">Mettre à jour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
