{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produitfactures list</h1>

     <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>Prix_ht</th>
                <th>Quantite</th>
                <th>Remise_ht</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produitFacture in produitFactures %}
            <tr>
                <td><a href="{{ path('produitfacture_show', { 'id': produitFacture.id }) }}">{{ produitFacture.id }}</a></td>
                <td>{{ produitFacture.libelle }}</td>
                <td>{{ produitFacture.code }}</td>
                <td>{{ produitFacture.prixht }}</td>
                <td>{{ produitFacture.quantite }}</td>
                <td>{{ produitFacture.remiseht }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produitfacture_show', { 'id': produitFacture.id }) }}" class="btn btn-secondary"><i class="fas fa-eye"></i> Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('produitfacture_edit', { 'id': produitFacture.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produitfacture_new') }}" class="btn btn-success"><i class="fas fa-plus"> </i>Cr√©er un nouveau produitFacture</a>
        </li>
    </ul>
{% endblock %}
