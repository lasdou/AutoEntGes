{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits</h1>

     <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>Prix_ht</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.code }}</td>
                <td>{{ produit.prixht }}</td>
                <td>
                    <ul class="actionList">
                        <li>
                            <a href="{{ path('produit_show', { 'id': produit.id }) }}" class="btn btn-secondary"><i class="fas fa-eye"></i> Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'id': produit.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="actionList">
        <li>
            <a href="{{ path('produit_new') }}" class="btn btn-success" data-remote="true" data-toggle="modal" data-target="#remoteModal"><i class="fas fa-plus"></i> Cr√©er un nouveau produit</a>
        </li>
    </ul>
{% endblock %}
