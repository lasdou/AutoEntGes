{% extends 'base.html.twig' %}

{% block body %}
    <h1>Devi</h1>

     <table class="table table-striped table-bordered table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ devi.id }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{% if devi.datecreation %}{{ devi.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('devis_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('devis_edit', { 'id': devi.id }) }}">Mettre à jour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
