{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clients list</h1>

     <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                <td>{{ client.nom }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('client_show', { 'id': client.id }) }}" class="btn btn-secondary"><i class="fas fa-eye"></i> Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Editer</a>
                        </li>
                        <li>
                            <a href="{{ path('devis_new', { 'id': client.id }) }}" class="btn btn-success"><i class="fas fa-cart-plus"></i> Nouveau Devis</a>
                        </li>
                        <li>
                            <a href="{{ path('facture_new', { 'id': client.id }) }}" class="btn btn-danger"><i class="fas fa-file-plus"></i> Nouvelle Facture</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_new') }}" class="btn btn-success"><i class="fas fa-plus"> </i>Cr√©er un nouveau client</a>
        </li>
    </ul>
{% endblock %}
