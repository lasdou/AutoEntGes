{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pays {{ pays.nom }}</h1>

     <table class="table table-striped table-bordered table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pays.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pays.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="actionList">
        <li>
            <a href="{{ path('pays_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('pays_edit', { 'id': pays.id }) }}" data-remote="true" data-toggle="modal" data-target="#remoteModal" class="btn btn-primary"><i class="fas fa-edit"></i> Mettre à jour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
